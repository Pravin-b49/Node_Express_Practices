<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main full-w min-h-screen bg-zinc-900">

        <div class="form p-10">
            <form action="/create" method="post">
                <label class="mt-4">File Name:</label>

                <input
                    class="block px-4 py-2 w-1/2 rounded-md outline-none bg-zinc-800"
                    type="text"
                    placeholder="Title goes here"
                    name="title"
                >

                <label class="mt-4">Write Details</label>

                <textarea
                    class="block px-4 py-2 mt-2 w-1/2 rounded-md outline-none resize-none bg-zinc-800"
                    placeholder="Write anythin about your task"
                    name="details"
                ></textarea>

                <input
                    class="mt-4 px-4 font-semibold py-2 bg-blue-700 rounded-md"
                    type="submit"
                    value="Create Task"
                >
            </form>
        </div>

        <div class="tasks p-10 flex gap-4 flex-wrap">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tighter">
                            <%= val %>
                        </h1>

                        <div class="flex mt-3 w-full justify-between">
                            <a class="text-blue-600" href="/file/<%= val %>">Read More</a>
                            <a class="text-yellow-600" href="/edit/<%= val %>">Edit File Name</a>
                            <a class="text-red-600" href="/delete/<%= val %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No Task Yet...!!</h3>
            <% } %>
        </div>

    </div>
</body>

</html>
